{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Elasticsearch"
    ],
    "Enrich": ["FromLogContext"],
    "Minimumlevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo" : [
      { "Name": "Console" },
      { 
        "Name": "File",
        "Args": {
          "path": "application.log"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://10.137.0.50:9200/",
          "autoRegisterTemplate": true,
          "overwriteTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "registerTemplateFailure": "IndexAnyway",
          "numberOfShards": "1",
          "numberOfReplicas": "1",
          "indexFormat": "crawler-logs-{0:yyyy.MM.dd}",
          "emitEventFailure": "WriteToSelfLog"
          
        }
      }
    ]
  },
  "WebDriverServerUri" : "https://localhost:8882",
  "ConnectionStrings": {
    "MongoDbConnectionString": "mongodb://10.137.0.50:27017"
  },
  "MessageExchanges": {
    "CrawlerExchange" : {
      "Transformer" : {
        "CrawlRequestTransformer": {
          "TypeName": "Crawler.Management.Service.CrawlRequestTransformer, Crawler.Management.Service, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
        }
      },
      "DataIn": {
        "RabbitMqConsumer": {
          "Amqp": {
            "Contexts": {
              "CrawlRequest": {
                "Queue": "request_queue",
                "RoutingKey": "requests*",
                "RetryCount": "1"
              }
            },
            "Provider": {
              "Rabbitmq" : {
                "Host": "10.137.0.50",
                "VirtHost": "crawler",
                "Port": "5671",
                "Username": "guest",
                "Password": "guest"
              }
            }
          }
        }
      },
      "DataOut": {        
        "Elastic": {
          "ConnectionStrings": {
            "ElasticsearchConnectionString": "http://10.137.0.50:9200/"
          },
          "Index": "crawler_results"
        }
      },
      "Deadletter": {
        "RabbitMqPublisher": {
          "Amqp": {
            "Contexts": {
              "CrawlRequest": {
                "Exchange": "crawl_dlq",
                "RoutingKey": "requests*",
                "RetryCount": "0"
              }
            },
            "Provider": {
              "Rabbitmq" : {
                "Host": "10.137.0.50",
                "VirtHost": "crawler",
                "Port": "5671",
                "Username": "guest",
                "Password": "guest"
              }
            }
          }
        }
      },
      "TypeMappings" : {
        "RabbitMqPublisher": "Microservice.Exchange.Endpoints.Rabbitmq.RabbitMqPublisher`2, Microservice.Exchange.Endpoints.Rabbitmq",
        "RabbitMqConsumer": "Microservice.Exchange.Endpoints.Rabbitmq.RabbitMqConsumer`1, Microservice.Exchange.Endpoints.Rabbitmq",
        "Elastic": "Microservice.Exchange.Endpoints.Elasticsearch.ElasticsearchPublisher`2, Microservice.Exchange.Endpoints.Elasticsearch",
        "Console": "Microservice.Exchange.Endpoints.ConsolePublisher`2, Microservice.Exchange.Core"
      }
    }
  }
}
